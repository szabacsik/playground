{
  "name": "szabacsik/playground",
  "description": "Playground",
  "version": "1.0.0",
  "type": "project",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "András Szabácsik",
      "email": "andras@szabacsik.hu"
    }
  ],
  "require": {
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:unit": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --configuration phpunit.xml --colors=always --testdox --display-warnings --display-errors --no-coverage"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --configuration phpunit.xml --color=always --testdox --do-not-cache-result --log-junit reports/results.xml --coverage-html reports/coverage --coverage-clover reports/coverage.xml --testdox-html reports/result.html"
    ]
  }
}